<beans xmlns="http://www.springframework.org/schema/beans" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 	
	<bean id="maintenanceOrderManagementAction" class="edu.thangiah.action.maintenanceorder.ManagementController" scope="prototype">
		<property name="maintenanceOrderDao" ref="maintenanceOrderDao" />
		<property name="vehicleDao" ref="vehicleDao" />
		<property name="driverDao" ref="driverDao" />
		<property name="serviceTechnicianDao" ref="serviceTechnicianDao" />
	</bean>
	
	<bean id="addMaintenanceOrder" class="edu.thangiah.action.maintenanceorder.AddAction" scope="prototype">
		<property name="maintenanceOrderDao" ref="maintenanceOrderDao" />
		<property name="serviceTechnicianDao" ref="serviceTechnicianDao" />
		<property name="vehicleDao" ref="vehicleDao" />
	</bean>
	
	<bean id="updateMaintenanceOrderAction" class="edu.thangiah.action.maintenanceorder.UpdateAction" scope="prototype">
		<property name="maintenanceOrderDao" ref="maintenanceOrderDao" />
		<property name="serviceTechnicianDao" ref="serviceTechnicianDao" />
		<property name="vehicleDao" ref="vehicleDao" />
	</bean>
	
	<bean id="deleteMaintenanceOrderAction" class="edu.thangiah.action.maintenanceorder.DeleteAction" scope="prototype">
		<property name="maintenanceOrderDao" ref="maintenanceOrderDao" />
		<property name="vehicleDao" ref="vehicleDao" />
		<property name="driverDao" ref="driverDao" />
		<property name="serviceTechnicianDao" ref="serviceTechnicianDao" />
	</bean>
</beans>