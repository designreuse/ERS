<beans xmlns="http://www.springframework.org/schema/beans" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="vehicleManagement" class="edu.thangiah.action.vehicle.ManagementController" scope="prototype">
		<property name="vehicleDao" ref="vehicleDao" />
		<property name="locationDao" ref="locationDao" />
		<property name="driverDao" ref="driverDao" />
		<property name="contractorDao" ref="contractorDao" />
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
	</bean>
	
	<bean id="addVehicle" class="edu.thangiah.action.vehicle.AddAction" scope="prototype">
		<property name="vehicleDao" ref="vehicleDao" />
		<property name="locationDao" ref="locationDao" />
		<property name="driverDao" ref="driverDao" />
		<property name="contractorDao" ref="contractorDao" />
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
	</bean>
	
	<bean id="updateVehicle" class="edu.thangiah.action.vehicle.UpdateAction" scope="prototype">
		<property name="vehicleDao" ref="vehicleDao" />
		<property name="locationDao" ref="locationDao" />
		<property name="driverDao" ref="driverDao" />
		<property name="contractorDao" ref="contractorDao" />
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
	</bean>
	
	<bean id="deleteVehicle" class="edu.thangiah.action.vehicle.DeleteAction" scope="prototype">
		<property name="vehicleDao" ref="vehicleDao" />
	</bean>
 
</beans>