<beans xmlns="http://www.springframework.org/schema/beans" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="addVehicleTypeAction" class="edu.thangiah.action.vehicletype.AddAction" scope="prototype">
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
	</bean>
	
	<bean id="vehicleTypeManagementAction" class="edu.thangiah.action.vehicletype.ManagementController" scope="prototype">
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
	</bean>
 
	<bean id="updateVehicleTypeAction" class="edu.thangiah.action.vehicletype.UpdateAction" scope="prototype">
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
		<property name="vehicleDao" ref="vehicleDao" />
	</bean>
	
	<bean id="deleteVehicleTypeAction" class="edu.thangiah.action.vehicletype.DeleteAction" scope="prototype">
		<property name="vehicleTypeDao" ref="vehicleTypeDao" />
	</bean>
</beans>